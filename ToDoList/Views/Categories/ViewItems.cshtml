<h1>To Do List</h1>

<h3>All tasks in Category</h3>

<ul>
@foreach(var item in Model)
{
  <li>Task: @item.GetDescription() Category: @item.GetCategoryId() Due date: @item.GetDueDate().ToShortDateString() @item.GetComplete() | <a href="/items/@item.GetId()/update">Edit</a></li>
  }
</ul>
<p><a href="/items/new">Add another item.</a></p>
<p><a href="/categories/new">Add another category.</a></p>
<p><a href="/categories">Go to categories list.</a></p>
