<h1>To Do List</h1>
@if (Model.Count == 0)
{
  <h3>Categories must be created before items can be created</h3>
}
else
{
<form action="/items" method="post">
  <label for="new-description">Item description:</label>
  <input id="new-description" name="new-description" type="text" required="true">

  <label for="new-category">Category:</label>
  <select name="new-category">
    @foreach(var category in Model)
    {
      <option value=@category.GetId()>@category.GetName()</option>
      }
  </select>

  <label for="new-duedate">Item Due Date:</label>
  <input id="new-duedate" name="new-duedate" type="date" required="true">
  <button type="submit">Submit</button>
</form>
}
<p><a href="/categories/new">Add another category.</a></p>
<p><a href="/items">Back to main page.</a></p>
