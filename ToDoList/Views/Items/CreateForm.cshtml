@{
  Layout = "_Layout";
}

<h1>Add a new item</h1>

<form class="form-inline" action="/items" method="post">
  <div class="form-group">
    <label for="new-description">Item description:</label>
    <input id="new-description" name="new-description" type="text" required="true">
  </div>

  <div class="form-group">
    <label for="new-duedate">Item Due Date:</label>
    <input id="new-duedate" name="new-duedate" type="date" required="true">
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>

