<h2>Edit Item: @Model["item"].GetDescription()</h2>
<form  class="form-inline" action="/items/@Model["item"].GetId()/update" method="post">
  <div class=form-group>
    <label for="name">Name:</label>
    <input type="text" name="newname" value="@Model["item"].GetDescription()">
  </div>

  <div class=form-group>
    <label for="newcategoryId">Category:</label>
    <select name="newcategoryId">
      @foreach(var category in @Model["categories"])
      {
        <option value=@category.GetId()>@category.GetName()</option>
      }
    </select>
  </div>

  <div class=form-group>
    <label for="duedate">Due Date:</label>
    <input type="date" name="newduedate" value="@Model["item"].GetDueDate()">
  </div>

  <div class=form-group>
    <label for="complete">Complete:</label>
    <input type="radio" name="newcomplete" value="true">True
    <input type="radio" name="newcomplete" value="false">False
  </div>
    <button type="submit" class="btn btn-default">Edit</button>
</form>
