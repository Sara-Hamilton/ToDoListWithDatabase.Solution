<h1>To Do List</h1>
<hr />
<h2>Categories:</h2>
@if (Model.Count != 0)
{
  <ul>
  @foreach(var category in Model)
  {
    <li>@category.GetName() | <a href="/categories/@category.GetId()">@category.GetName()</a></li>
    }
  </ul>
}
<p><a href="/categories/new">Add another category.</a></p>
<p><a href="/">Return home.</a></p>

